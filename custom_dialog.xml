<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:foregroundGravity="center"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        >
        <LinearLayout
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:background="@drawable/dialogback"
            android:layout_width="wrap_content"
            android:layout_height="430dp"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/list_row"
                        android:text="@string/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <View
                        android:layout_width="160dp"
                        android:layout_height="1dp"
                        android:background="@color/list_row"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"/>
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/sayi"
                        android:text="@string/rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center|right"
                    android:layout_width="140dp"
                    android:layout_height="250dp"
                    android:src="@drawable/pre"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="@color/list_row"
                    android:id="@+id/dontShow"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    android:layout_width="95dp"
                    android:layout_height="43dp"
                    android:elevation="1dp"
                    android:clickable="true"
                    android:layout_margin="3dp"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:layout_marginTop="1dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="@string/artik"
                        android:textColor="@color/sayi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </android.support.v7.widget.CardView>
                
                <android.support.v7.widget.CardView
                    android:id="@+id/remainmeLater"
                    android:layout_width="95dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/list_row"
                    app:cardCornerRadius="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/sonra"
                        android:textColor="@color/sayi"
                        android:textSize="13sp" />

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/rateUs"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/list_row"
                    android:layout_width="95dp"
                    android:layout_height="42dp"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:text="@string/ofcourse"
                        android:textColor="@color/sayi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
